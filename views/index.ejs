<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Custom Stylesheet -->
    <link href="/styles/style.css" rel="stylesheet">
    <title>BookSmart</title>
</head>
<body>
    <header class="p-3 mb-3 border-bottom">
        <div class="container">
          <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
              <img id="book-logo" src="/assets/logo.svg" alt="Open book logo">
              <h2 class="title">Booksmart.</h2>
            </a>
    
            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
              <li><a href="/books" class="nav-link px-2 link-body-emphasis">My Reviews</a></li>
            </ul>
          </div>
        </div>
      </header>

      <div class="book-container">
        <h3 id="book-search-header">Add a Book Review</h3>
        <form action="/search" method="post" class="col-6 search-form">
          <input name="book_query" type="text" class="form-control" placeholder="Name a book any book..." aria-label="Search">
          <button type="submit" id="query-form-button">Search</button>
        </form>
      </div>

      <% if(locals.results){ %>
        <div class="results-container">
          <% results.forEach((result) => { %>
            <div class="card item" id="<%= result.cover_id %>" style="width: 12rem;">
              <img src="//covers.openlibrary.org/b/id/<%= result.cover_id %>-M.jpg" class="card-img-top" alt="<%= result.title %> Cover">
              <div class="card-body" id="<%= result.cover_id %>">
                <form action="/review" method="POST">
                  <h4 class="card-title" name="book-title"> <%= result.title %> </h4>
                  <p class="card-text" name="book-author"> By <%= result.author %></p>
                  <input type="hidden" name="hiddenID" value="<%= result.cover_id %>">
                  <input class="btn btn-dark" type="submit" value="Review" id="<%= result.cover_id%>">
                </form>
              </div>
            </div>
          <% }); %>
        </div>
        <% } %>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="../index.js" charset="utf-8"></script>
</body>